#rebug-open-button-container {
    position: fixed;
    bottom: 3px;
    right: 6px;
    z-index: 1000000002;
}

.rebug-open-button-has-error {
    color: #a01312;
    text-shadow: 1px 1px rgba(0, 0, 0, 10%);
    opacity: 1;
}

.rebug-open-button-has-error .yt-uix-button-arrow {
    border-bottom-color: #a01312;
}

.rebug-open-button-has-error:hover {
    color: #c00;
    opacity: 1;
}

#rebug-lightbox-container {
    display: none;
}

#rebug-lightbox-container.open {
    display: block;
}

.rebug-close-button-wrapper {
    position: absolute;
    top: 10px;
    right: 10px;
}

#rebug-tabs-switcher {
    float: left;
}

#rebug-tabs-switcher + #rebug-tabbed-content-wrapper {
    margin-left: 15px;
    float: right;
}

.rebug-tab {
    min-width: 160px;
    padding: 4px 8px;
    cursor: pointer;
}

.rebug-tab:hover {
    background: #444;
    color: #fff;
}

.rebug-tab.rebug-tab-selected {
    background: #cc181e;
    color: #fff;
    font-weight: 500;
    text-shadow: -1px -1px 0 rgba(0, 0, 0, 0.25);
}

.exp-invert-logo .rebug-tab.rebug-tab-selected {
    background: #f00;
}

.rebug-tab-content {
    /* Width is equal to
       (width of container - padding on both sides [20px * 2] - (width of tabs + padding [176px]) 
       - left padding of parent [15px] - border width both sides [1px * 2])
       
       Height is equal to (height of lightbox content - height of header [51px]) */
    width: 367px;
    height: 329px;
    overflow-y: scroll;
    background: #fbfbfb;
    border: 1px solid #ededed;
    padding: 3px;
    display: none;
}

.rebug-tab-content.rebug-tab-selected {
    display: block;
}

#rebug-lightbox .yt-dialog-content {
    /* Height of lightbox container - 20px */
    height: 380px;
}

.rebug-expander
{
  cursor: pointer;
}

@media screen and (min-width: 850px)
{
    .rebug-tab-content
    {
        width: 567px;
    }
}

@media screen and (min-height: 650px)
{
    .rebug-tab-content
    {
        height: 529px;
    }

    #rebug-lightbox .yt-dialog-content
    {
        height: 580px;
    }
}

@media screen and (min-width: 1050px)
{
    .rebug-tab-content
    {
        width: 767px;
    }
}

@media screen and (min-height: 850px)
{
    .rebug-tab-content
    {
        height: 729px;
    }

    #rebug-lightbox .yt-dialog-content
    {
        height: 780px;
    }
}

.nothing-to-see-renderer
{
    font-size: 18px;
    color: #666;
    display: table;
    height: 100%;
    margin: 0 auto;
}

.nothing-to-see-renderer .text
{
    max-width: 200px;
    vertical-align: middle;
    display: table-cell;
}

/* Errors */
#rebug-tab-content-error
{
    /* In order to set the padding to 0 here (it's 3px normally),
       3px from both sides (6px total) need to be added to the final
       width/height. */
    width: 373px;
    height: 335px;
    padding: 0;
}

@media screen and (min-width: 850px)
{
    #rebug-tab-content-error
    {
        width: 573px;
    }
}

@media screen and (min-height: 650px)
{
    #rebug-tab-content-error
    {
        height: 535px;
    }
}

@media screen and (min-width: 1050px)
{
    #rebug-tab-content-error
    {
        width: 773px;
    }
}

@media screen and (min-height: 850px)
{
    #rebug-tab-content-error
    {
        height: 735px;
    }
}

