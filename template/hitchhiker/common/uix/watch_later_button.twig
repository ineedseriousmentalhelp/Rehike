{%- macro render(data, videoId) -%}
{% import "common/uix/button.twig" as btn %}
{% if yt.signin.isSignedIn %}
{{ btn.render({
    size: "SIZE_SMALL",
    style: "STYLE_DEFAULT",
    icon: { noIconMarkupOverride: true },
    tooltip: data.isToggled ? data.toggledTooltip : data.untoggledTooltip,
    class: [
        "addto-button",
        "video-actions",
        "spf-nolink",
        "hide-until-delayloaded",
        data.isToggled ? "addto-watch-later-button-success" : "addto-watch-later-button" 
    ],
    customAttributes: {
        "data-video-ids": videoId
    }
}) }}
{% else %}
{{ btn.render({
    size: "SIZE_SMALL",
    style: "STYLE_DEFAULT",
    icon: { noIconMarkupOverride: true },
    tooltip: data.isToggled ? data.toggledTooltip : data.untoggledTooltip,
    class: [
        "addto-button",
        "video-actions",
        "spf-nolink",
        "hide-until-delayloaded",
        "addto-watch-later-button-sign-in" 
    ],
    customAttributes: {
        "data-video-ids": videoId,
        "data-button-menu-id": "shared-addto-watch-later-login"
    }
}) }}
{% endif %}
{% endmacro %}